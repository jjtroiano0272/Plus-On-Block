model Attack {
  id                 String   @id @unique
  created_at         DateTime @default(now())
  character_name     String
  attack_name        String
  attack_input       String
  advantage_on_block Int
  advantage_on_hit   Int
  startup            Int
  active             Int
  recovery           Int
}
